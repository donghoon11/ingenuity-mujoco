<mujoco model="Ingenuity Mars Testbed">
  <include file="mhs_mars.xml"/>

  <statistic center="0 0 0.1" extent="0.6" meansize=".05"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.25 0.15 0.10 1"/>
    <global azimuth="-20" elevation="-20" ellipsoidinertia="true"/>
  </visual>

  <asset>
    <!-- Mars-like reddish gradient skybox -->
    <texture type="skybox" builtin="gradient" rgb1="0.6 0.3 0.15" rgb2="0.15 0.08 0.04"
             width="512" height="3072"/>
    <!-- Mars-like terrain ground -->
    <texture type="2d" name="groundplane" builtin="checker" mark="edge"
             rgb1="0.55 0.35 0.25" rgb2="0.40 0.25 0.18"
             markrgb="0.65 0.45 0.35" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true"
              texrepeat="5 5" reflectance="0.05"/>
  </asset>

  <worldbody>
    <light pos="0 0 3" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
  </worldbody>
</mujoco>
