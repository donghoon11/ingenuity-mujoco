<mujoco model="Ingenuity_Optimized">
    <compiler assetdir="../../../assets" autolimits="true"/>
    <!-- Earth atmosphere: rho=1.225, gravity=9.81 (same as baseline scene.xml) -->
    <option timestep="0.008" density="1.225" viscosity="1.8e-5"/>

    <default>
        <default class="ingenuity">
            <geom mass="0"/>
            <default class="visual">
                <geom group="2" type="mesh" contype="0" conaffinity="0"/>
            </default>
            <default class="collision">
                <geom group="3" type="box"/>
                <default class="rotor">
                    <geom type="ellipsoid"/>
                </default>
            </default>
        </default>
    </default>

    <asset>
        <texture type="2d" file="carbon.png"/>
        <material name="box" rgba="1 1 1 1"/>
        <material name="blades_baseline" texture="carbon" rgba="0.3 0.3 0.3 1"/>
        <material name="blades_optimized" texture="carbon" rgba="0.1 0.5 0.9 1"/>
        <material name="legs" rgba="0.05 0.05 0.05 0.8"/>

        <mesh name="mainBody" file="mhs_mainbody_v16.stl"/>
        <mesh name="topBlades_opt" file="optimized_topblades.stl"/>
        <mesh name="bottomBlades_opt" file="optimized_bottomblades.stl"/>
        <mesh name="leg01Blades" file="mhs_leg01_v16.stl"/>
        <mesh name="leg02Blades" file="mhs_leg02_v16.stl"/>
        <mesh name="leg03Blades" file="mhs_leg03_v16.stl"/>
        <mesh name="leg04Blades" file="mhs_leg04_v16.stl"/>
    </asset>

    <worldbody>
        <body name="ingenuity" pos="0 0 0.5" childclass="ingenuity">
            <freejoint/>
            <geom
                class="visual"
                material="box"
                mesh="mainBody"
                pos="0 0 0"
                quat="0 0 1 0"
            />
            <geom class="collision" mass="0.5"  size="0.084 0.097 0.065" pos="0 0 -0.145"/>
            <geom class="collision" mass="0.25" size="0.04 0.04 0.10" pos="0 0 0.03"/>
            <geom class="collision" mass="0.25" size="0.08 0.21 0.001" pos="0 0 0.14"/>
            <body name="leg2">
                <geom
                    class="visual"
                    material="legs"
                    mesh="leg02Blades"
                    pos="0.196 -0.1945 -0.215"
                    quat="0 0 1 0"
                />
                <geom
                    class="collision"
                    mass="0.05"
                    size="0.02 0.015 0.01"
                    pos="0.293 -0.29 -0.329"
                    quat="0.39 0 0 1"
                />
                <geom
                    class="collision"
                    mass="0.05"
                    size="0.01 0.01 0.14"
                    pos="0.196 -0.1945 -0.225"
                    quat="-0.4 -0.2 0.45 1"
                />
            </body>
            <body name="leg1">
                <geom
                    class="visual"
                    material="legs"
                    mesh="leg01Blades"
                    pos="-0.1945 -0.196 -0.215"
                    quat="0 0 1 0"
                />
                <geom
                    class="collision"
                    mass="0.05"
                    size="0.02 0.015 0.01"
                    pos="-0.293 -0.29 -0.329"
                    quat="0.39 0 0 1"
                />
                <geom
                    class="collision"
                    mass="0.05"
                    size="0.01 0.01 0.14"
                    pos="-0.196 -0.1945 -0.225"
                    quat="0.4 0.2 0.45 1"
                />
            </body>
            <body name="leg3">
                <geom
                    class="visual"
                    material="legs"
                    mesh="leg03Blades"
                    pos="0.1945 0.196 -0.215"
                    quat="0 0 1 0"
                />
                <geom
                    class="collision"
                    mass="0.05"
                    size="0.02 0.015 0.01"
                    pos="0.293 0.29 -0.329"
                    quat="0.39 0 0 1"
                />
                <geom
                    class="collision"
                    mass="0.05"
                    size="0.01 0.01 0.14"
                    pos="0.196 0.1945 -0.225"
                    quat="0.4 -0.2 -0.45 1"
                />
            </body>
            <body name="leg4">
                <geom
                    class="visual"
                    material="legs"
                    mesh="leg04Blades"
                    pos="-0.196 0.1945 -0.215"
                    quat="0 0 1 0"
                />
                <geom
                    class="collision"
                    mass="0.05"
                    size="0.02 0.015 0.01"
                    pos="-0.293 0.29 -0.329"
                    quat="0.39 0 0 1"
                />
                <geom
                    class="collision"
                    mass="0.05"
                    size="0.01 0.01 0.14"
                    pos="-0.196 0.1945 -0.225"
                    quat="-0.4 0.2 -0.45 1"
                />
            </body>
            <!-- Top rotor: CW, optimized blades (blue) -->
            <body name="top_rotor" pos="0 0 0" quat="0 0 1 0">
                <joint name="top_rotor_joint" type="hinge" axis="0 0 1" damping="0" frictionloss="0"/>
                <geom
                    class="visual"
                    material="blades_optimized"
                    mesh="topBlades_opt"
                    pos="0 0 -0.0675"
                />
                <geom class="rotor" mass="0.1" pos="0 0 -0.0675" size="0.64 0.64 0.02"/>
                <site name="thrust1" pos="0 0 -0.0830" quat="0 0 1 0"/>
            </body>
            <!-- Bottom rotor: CCW, optimized blades (blue) -->
            <body name="bottom_rotor" pos="0 0 0" quat="0 0 1 0">
                <joint name="bottom_rotor_joint" type="hinge" axis="0 0 1" damping="0" frictionloss="0"/>
                <geom
                    class="visual"
                    material="blades_optimized"
                    mesh="bottomBlades_opt"
                    pos="0 0 0.0092"
                    quat="0.6 0 0 1"
                />
                <geom class="rotor" mass="0.1" pos="0 0 0.0092" size="0.64 0.64 0.02"/>
                <site name="thrust2" pos="0 0 0.0150" quat="0 0 1 0"/>
            </body>

            <camera name="nav_cam" pos="0.08 0 -0.22" mode="fixed" xyaxes="0 -1 0 1 -1 1"/>
            <site name="imu"/>
            <site name="laser_rangefinder" pos="0 0 -0.22" quat="0 0 1 0"/>
            <site name="thrustxy"/>
        </body>
    </worldbody>

    <actuator>
        <!-- FM-scaled thrust gear: 62.2 N/ctrl (baseline 50 * FM_ratio 1.2445)
             Optimized blade FM=0.4642 vs baseline FM=0.3730 (+24.5%)
             Same ctrl → 24.5% more thrust → lower ff needed for hover -->
        <motor name="thrust1" site="thrust1" ctrlrange="-1 1" gear="0 0 62.2 0 0 0"/>
        <motor name="thrust2" site="thrust2" ctrlrange="-1 1" gear="0 0 62.2 0 0 0"/>
        <!-- Attitude: 0.112 Nm/ctrl (0.09 * FM_ratio) -->
        <motor name="x_movement" site="thrustxy" ctrlrange="-1 1" gear="0 0 0 0.112 0 0"/>
        <motor name="y_movement" site="thrustxy" ctrlrange="-1 1" gear="0 0 0 0 0.112 0"/>
    </actuator>

    <sensor>
        <rangefinder name="sensor_laser" site="laser_rangefinder"/>
        <gyro name="sensor_gyro" site="imu"/>
        <accelerometer name="sensor_acc" site="imu"/>
        <framequat name="sensor_quat" objtype="site" objname="imu"/>
    </sensor>
</mujoco>
